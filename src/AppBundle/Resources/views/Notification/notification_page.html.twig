{% extends 'AppBundle:Layouts:layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="col-lg-12 box-default box-notifications">
            <h1 class="box-header"> Notificaciones </h1>
            
            <div class="box-content">
                {% for notification in pagination %}
                    <div class="col-lg-12 notification-item">
                        <div class="alert alert-default">
                            <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                            {% set notificationUser = notification.typeId|get_user %}

                            {% if notification.type == 'follow' %}
                               <a href="{{ path('user_profile', {nickname: notificationUser.nick})}}"/> 
                               {{notificationUser.name}} {{notificationUser.surname}}</a> te esta siguiendo
                            {% endif %}

                            {% if notification.type == 'like' %}
                                A <a href="{{ path('user_profile', {nickname: notificationUser.nick})}}"/>
                                    {{notificationUser.name}} {{notificationUser.surname}}</a>  
                                le gusta una publicaci√≥n tuya
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}    
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript" src="{{ asset('assets/js/custom/home.js') }}"></script>
{% endblock %}